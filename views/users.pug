meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title User Login
link(rel="stylesheet", href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css")
link(rel="stylesheet", href="/css/users.css")
.login-card
  h3 User Login
  form#loginForm
    .mb-3
      label.form-label(for="role") Sign in as
      select.form-select#role(required)
        option(value, disabled, selected) Choose role
        option(value="manager") Manager
        option(value="employee") Employee
    .mb-3
      label.form-label(for="email") Email
      input#email.form-control(type="text", required)
    .mb-3
      label.form-label(for="password") Password
      input#password.form-control(type="password", required)
    button.btn.btn-primary(type="submit") Login
script(src="/js/users.js")
  //  Modal for Add/Edit Attendant 
  .modal.fade#addAttendantModal(tabindex="-1")
    .modal-dialog
      .modal-content
        form#attendantForm
          .modal-header
            h5.modal-title Add Attendant
            button.btn-close(type="button", data-bs-dismiss="modal")
          .modal-body
            input.form-control.mb-2#attendantName(type="text", placeholder="Full Name", required)
            input.form-control.mb-2#attendantRole(type="text", placeholder="Role", required)
            input.form-control.mb-2#attendantPhone(type="tel", placeholder="Phone Number", required)
            input.form-control.mb-2#attendantEmail(type="email", placeholder="Email", required)
            select.form-control.mb-2#attendantStatus(required)
              option(value="Active") Active ‚úÖ
              option(value="Inactive") Inactive ‚ùå
          .modal-footer
            button.btn.btn-primary(type="submit") Save Attendant